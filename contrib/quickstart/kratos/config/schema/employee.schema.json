{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/schema/employee.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Employee",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "role" : {
          "title": "Role of user",
          "type": "string"
        }
      },
      "required": [
        "email",
        "role"
      ],
      "additionalProperties": false
    }
  }
}
